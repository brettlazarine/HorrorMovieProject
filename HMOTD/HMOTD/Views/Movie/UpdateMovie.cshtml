@model Movies


<h2>Update @Model.</h2>

@using (Html.BeginForm("UpdateMovieToDatabase", "Movie", "Post")) 
{
    <input asp-for="ID" type="hidden" value="@Model.ID" />

    <label asp-for="ModsHaveSeen" class="control-label">Have Mods Seen It?</label>
    <input type="number" step="1" max="1" min="0" name="ModsHaveSeen" class="form-control" value="@Model.ModsHaveSeen" />

    <input type="submit" value="Update Movie" class="btn btn-primary" />
}